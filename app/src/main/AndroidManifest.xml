<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projectmanagement.benson.homeinventoryapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.AddItem"
            android:label="Add an Item" />
        <activity
            android:name=".UI.ViewItem"
            android:label="@string/title_activity_view_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.EditItem"
            android:label="@string/title_activity_editItem" />
        <activity
            android:name=".UI.Categories"
            android:label="@string/title_activity_categories" />
        <activity
            android:name=".UI.Subcategories"
            android:label="@string/title_activity_subcategories" />
        <activity
            android:name=".UI.ItemList"
            android:label="@string/title_activity_item_list" />
        <activity
            android:name=".UI.ViewLists"
            android:label="@string/title_activity_view_lists"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.EditList"
            android:label="@string/title_activity_edit_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UI.AddList" />
        <activity
            android:name=".UI.ViewListItems"
            android:label="@string/title_activity_view_list_items"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>